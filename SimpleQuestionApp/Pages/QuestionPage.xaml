<UserControl x:Class="SimpleQuestionApp.Pages.QuestionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleQuestionApp.Pages"
             mc:Ignorable="d" MinHeight="380" MinWidth="500">
    <Grid>
        <Label x:Name="questionLabel"  Content="Are you pretty, baby?" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Center" Margin="0,78,0,0"/>
        <Grid x:Name="buttonsGrid" Margin="0,132,0,0" MouseMove="ButtonsGrid_MouseMove" Background="White">
            <Button x:Name="yesButton" Content="Yes" HorizontalAlignment="Left" Margin="67,118,0,0" VerticalAlignment="Top" Width="140" Height="37" FontSize="14" FontWeight="Bold" Background="#FF5F5F5F" Foreground="White" Click="yesButton_Click"/>
            <Button x:Name="noButton" Content="No" HorizontalAlignment="Left" Margin="302,118,0,0" VerticalAlignment="Top" Width="140" Height="37" FontSize="14" FontWeight="Bold" Background="#FF5F5F5F" Foreground="White" RenderTransformOrigin="0.486,0.542"/>
        </Grid>
    </Grid>
</UserControl>
